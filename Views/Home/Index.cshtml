                            <option value="">Selecione um modelo</option>
                            <option value="modelo_3575">Modelo 3575 - Mato Grosso</option>
                            <option value="modelo_6122">Modelo 6122 - Mato Grosso do Sul</option>
                            <option value="modelo_0908">Modelo 0908 - S√£o Paulo</option>
                            <option value="modelo_2056">Modelo 2056 - Divin√≥polis</option>
                            <option value="modelo_2057">Modelo 2057 - Varginha</option>
                        </select>
                        <span asp-validation-for="ModeloSelecionado" class="text-red-400 text-sm"></span>
