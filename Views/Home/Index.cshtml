<div class="space-y-8">
    <!-- Header with Logo -->
    <div class="glass-card rounded-2xl p-8 text-center">
        <div class="flex flex-col items-center">
            <img src="/LOGO.png" alt="MAFFENG Logo" class="h-24 w-auto mb-4" />
            <h1 class="text-4xl font-bold mb-2">Gerador de Relat√≥rios Fotogr√°ficos</h1>
            <p class="text-gray-300 text-lg">Sistema automatizado para gera√ß√£o de relat√≥rios de levantamento preventivo</p>
        </div>
    </div>

    <!-- Upload Form -->
    <div class="glass-card rounded-2xl p-8">
        <h2 class="text-2xl font-bold mb-6">
            <i class="fas fa-upload mr-2"></i>
            Dados do Projeto
        </h2>

        <form asp-action="ProcessUpload" method="post" enctype="multipart/form-data" class="space-y-6">
            <!-- Project Information Section -->
            <div class="glass-card rounded-xl p-6">
