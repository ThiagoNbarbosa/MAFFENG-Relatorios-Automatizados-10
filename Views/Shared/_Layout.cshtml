<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MAFFENG</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        .glass-card {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .glass-input {
            backdrop-filter: blur(5px);
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }
        
        .glass-input:focus {
            background: rgba(255, 255, 255, 0.15);
            border-color: rgba(59, 130, 246, 0.5);
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.3);
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        
        .bg-gradient-maffeng {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
    </style>
</head>
<body class="bg-gradient-maffeng min-h-screen text-white">
    <header>
        <nav class="glass-card border-b border-white/20 p-4">
            <div class="container mx-auto flex justify-between items-center">
                <div class="flex items-center space-x-4">
                    <img src="/LOGO.png" alt="MAFFENG Logo" class="h-10 w-auto" />
                    <h1 class="text-xl font-bold">MAFFENG - Gerador de Relatórios</h1>
                </div>
                <div class="flex space-x-4">
                    <a asp-controller="Home" asp-action="Index" class="text-white hover:text-blue-300 transition-colors">
                        <i class="fas fa-home mr-1"></i>Início
                    </a>
                    <a asp-controller="Home" asp-action="Configuracoes" class="text-white hover:text-blue-300 transition-colors">
                        <i class="fas fa-cog mr-1"></i>Configurações
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mx-auto px-4 py-8">
        @RenderBody()
    </main>

    <footer class="glass-card border-t border-white/20 p-4 mt-auto">
        <div class="container mx-auto text-center text-gray-300">
            <p>&copy; 2025 MAFFENG - Gerador de Relatórios Fotográficos</p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>